public Integer nextPrime(Integer num) {
    //code here

    if(num < 2)
        return 2;
    
    Integer number = num + 1;
    while(!isPrime(number)){
        number += 1;
    }

    return number;
    
}

public boolean isPrime(Integer num){

    for(Integer i = 2; i <= n - 1; i++){
        if(Math.mod(num, i) == 0)
            return false;
    }

    return true;
}