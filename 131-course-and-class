public void createCourseAndClass(String name, String description) {
    // code here
    if(description != null){
        apxio__Course__c course = new apxio__Course__c(Name = name, 
    apxio__Course_Details__c = description);
    }
    insert course;

    apxio__Class__c cls = new apxio__Class__c(Id = course.Id, 
    Name = name, apxio__Description__c = description.left(255));
    insert cls;
}