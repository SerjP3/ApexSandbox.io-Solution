public void createCourseAndClass(String name, String description) {
    // code here

    apxio__Course__c course = new apxio__Course__c(Name = name, 
    apxio__Course_Details__c = description);
    insert course;
    
    apxio__Class__c class = new apxio__Class__c(Id = course.Id, 
    Name = course.Name, apxio__Description__c = course.apxio__Course_Details__c.left(255));
    insert class;
}